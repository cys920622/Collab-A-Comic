extends layout

block content
    .container
        h1 Login Page
        p.lead Please enter your login information
        br
        form(role='form', action="/login",method="post", stype='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Enter Username')
            .form-group
                input.form-control(type='password', name="password", placeholder='Enter Password')
            button.btn.btn-default(type='submit') Submit
    a(href='/')
        button.btn.btn-primary(type="button") Cancel
