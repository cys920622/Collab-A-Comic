extends layout

link(rel='stylesheet', href='css/newcomic.css')

block content
    include navbar
    h1 Create New Comic!
    body
        form(method="post",enctype="multipart/form-data",action="/newcomic")
            p
                input(type="text",name="title",placeholder="Your comic's title")
            p
                input(type="file",name="upl")
            p
                input(type="submit")
