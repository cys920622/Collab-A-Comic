link(rel='stylesheet', href='/stylesheets/style.css')

include navbar

style.
    .elt {
        float: left;
    }
    ul.list-group {
        height: 300px;
        overflow-y: scroll;
    }

body
    .elt
        h4 Notifications
        ul.list-group
            - var notificationArray = user.notifications.reverse();
            each n in notificationArray
                - var i = 10;
                if i != 0
                    - var link = "/comic/"+n.notiCid;
                    li.list-group-item
                        a(href=link) #{n.notificationText}
                    //i - 1;